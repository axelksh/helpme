<%= form_with(model: [:account, @task], local: true) do |form| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <%= form.text_field :email, value: current_user.email, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPhone4">Phone</label>
        <%= form.text_field :phone, placeholder: 'Phone', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Title</label>
      <%= form.text_field :title, placeholder: 'Need help for...', class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description</label>
      <%= form.text_area :descr, placeholder: 'Detailed description', class: 'form-control' %>
    </div>


    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputAddress">City</label>
        <%= form.text_field :city, placeholder: 'City', class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <label for="inputState">Country</label>
        <%= form.collection_select :country_id, Country.all, :id, :name, {}, {class: 'form-control'} %>
      </div>
    </div>
    <!--<div class="form-group">-->
      <!--<div class="form-check">-->
        <!--<input class="form-check-input" type="checkbox" id="gridCheck">-->
        <!--<label class="form-check-label" for="gridCheck">-->
          <!--Check me out-->
        <!--</label>-->
      <!--</div>-->
    <!--</div>-->

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputAddress">Photos</label>
        <%= form.file_field :images, multiple: true, class: 'form-control-file' %>
      </div>
      <div class="form-group col-md-5">
      </div>
      <div class="form-group col-md-1">
        <%= form.submit 'Publish task', class: 'btn btn-primary' %>
      </div>
    </div>


<% end %>
