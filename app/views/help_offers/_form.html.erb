<%= form_with(model: [@task, @task.help_offers.build]) do |form| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <%= form.text_field :email, value: current_user.email, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPhone4">Phone</label>
        <%= form.text_field :phone, placeholder: 'Phone', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Comment</label>
      <%= form.text_area :comment, placeholder: 'Write some reason', class: 'form-control' %>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
      </div>
      <div class="form-group col-md-5">
      </div>
      <div class="form-group col-md-1">
        <%= form.submit 'Propose help', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
